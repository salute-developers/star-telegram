<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Sbdv.BigTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textSize">@dimen/text_size_style_big_title</item>
    </style>

    <style name="TextAppearance.Sbdv.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textSize">@dimen/text_size_style_title</item>
    </style>

    <style name="TextAppearance.Sbdv.Subtitle1" parent="TextAppearance.AppCompat.Title">
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textSize">@dimen/text_size_style_subtitle1</item>
    </style>

    <style name="TextAppearance.Sbdv.Subtitle2" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_style_subtitle2</item>
    </style>

    <style name="TextAppearance.Sbdv.Button" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_style_button</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Sbdv.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_size_style_body</item>
    </style>

    <style name="TextAppearance.Sbdv.Body1.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Sbdv.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_size_style_caption</item>
    </style>

    <style name="TextAppearance.Sbdv.QrLoginTitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:letterSpacing">-0.022</item>
        <item name="android:lineHeight">@dimen/sbdv_qr_login_title_line_height</item>
        <item name="android:textColor">@color/white_alpha_96</item>
        <item name="android:textFontWeight">@integer/semiBold_font_weight</item>
        <item name="android:textSize">@dimen/sbdv_qr_login_title_text_size</item>
    </style>

    <style name="TextAppearance.Sbdv.QrLoginPositiveButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/sbdv_positive_indented_btn_r24_background</item>
        <item name="android:foreground">@drawable/sbdv_selector_focusable_button_24</item>
        <item name="android:lineHeight">@dimen/sbdv_qr_login_button_line_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.Sbdv.Button</item>
        <item name="android:textColor">@color/white_alpha_96</item>
        <item name="android:textFontWeight">@integer/semiBold_font_weight</item>
        <item name="android:textSize">@dimen/sbdv_qr_login_button_text_size</item>
        <item name="android:lines">1</item>
    </style>

    <style name="TextAppearance.Sbdv.QrLoginNeutralButton" parent="TextAppearance.Sbdv.QrLoginPositiveButton">
        <item name="android:background">@drawable/sbdv_neutral_btn_r24_background</item>
    </style>

</resources>