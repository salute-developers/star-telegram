<?xml version="1.0" encoding="utf-8"?>
<!--Для выбора страны из списка доступных при авторизации по телефону, чтобы рамка не была слишком большой -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item
                android:left="@dimen/country_list_item_card_left_padding"
                android:right="@dimen/country_list_item_card_right_padding">
                <shape android:shape="rectangle">
                    <stroke android:width="@dimen/sbdv_widget_selector_width" android:color="@color/sbdv_widget_selector" />
                    <corners android:radius="@dimen/card_corner_radius" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
