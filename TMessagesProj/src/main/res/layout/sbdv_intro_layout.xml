<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/sbdv_intro_content_margin"
            android:paddingBottom="@dimen/sbdv_intro_content_padding"
            android:background="@drawable/intro_frame_background">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sbdv_intro_title_margin_horizontal"
                android:layout_marginTop="@dimen/sbdv_intro_title_margin_top"
                android:text="@string/Videocalls"
                android:textAppearance="@style/TextAppearance.Sbdv.Title"
                android:textColor="@color/sbdv_white"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/messageTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sbdv_intro_message_margin_horizontal"
                android:layout_marginTop="@dimen/sbdv_intro_message_margin_top"
                android:gravity="center_horizontal"
                android:text="@string/Page1Message"
                android:textAlignment="gravity"
                android:textAppearance="@style/TextAppearance.Sbdv.Caption"
                android:textColor="@color/sbdv_white_56"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleTextView" />

            <TextView
                android:id="@+id/startMessagingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sbdv_intro_button_margin_horizontal"
                android:layout_marginTop="@dimen/sbdv_intro_button_margin_top"
                android:background="@drawable/sbdv_positive_indented_btn_r24_background"
                android:paddingHorizontal="@dimen/sbdv_intro_button_padding_horizontal"
                android:paddingVertical="@dimen/sbdv_intro_button_padding_vertical"
                android:lines="1"
                android:maxLines="1"
                android:text="@string/AuthorizeInTelegram"
                android:textAppearance="@style/TextAppearance.Sbdv.Button"
                android:textColor="@color/sbdv_white"
                android:foreground="@drawable/sbdv_selector_focusable_indented_btn_r24"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/messageTextView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/telegramTextView"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_width="@dimen/sbdv_intro_telegram_width"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/sbdv_intro_telegram_margin_bottom"
            android:text="@string/IsNotAnOfficialClientOfTelegram"
            android:textAppearance="@style/TextAppearance.Sbdv.Caption"
            android:textColor="@color/sbdv_white_56" />

    </FrameLayout>

</ScrollView>