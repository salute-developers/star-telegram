<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ff424242">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/transparent" />

    <ImageView
        android:id="@+id/player_album_art"
        android:layout_width="@dimen/player_small_album_art_size"
        android:layout_height="@dimen/player_small_album_art_size"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/player_small_album_art_margin" />

    <TextView
        android:id="@+id/player_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:singleLine="true"
        android:textColor="#ffffffff"
        android:textSize="@dimen/player_song_name_text_size"
        android:layout_marginLeft="@dimen/player_small_name_margin_left"
        android:layout_marginTop="@dimen/player_small_song_name_margin_top"
        android:layout_marginRight="@dimen/player_small_name_margin_right"
        tools:text="Song Title"/>

    <ImageView
        android:id="@+id/player_close"
        android:layout_width="@dimen/player_song_close_image_size"
        android:layout_height="@dimen/player_song_close_image_size"
        android:layout_marginTop="@dimen/player_song_close_image_margin"
        android:layout_marginRight="@dimen/player_song_close_image_margin"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        android:background="@drawable/bar_selector_white"
        android:src="@drawable/sbdv_ic_close" />

    <TextView
        android:id="@+id/player_author_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="#ffc7c7c7"
        android:layout_marginTop="@dimen/player_small_author_name_margin_top"
        android:layout_marginLeft="@dimen/player_small_name_margin_left"
        android:layout_marginRight="@dimen/player_small_name_margin_right"
        android:textSize="@dimen/player_author_text_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/player_buttons_height"
        android:gravity="center"
        android:layout_marginRight="@dimen/player_small_buttons_margin"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <ProgressBar
            android:layout_width="@dimen/player_progress_size"
            android:layout_height="@dimen/player_progress_size"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/player_small_progress_margin"
            android:indeterminateDrawable="@drawable/loading_animation"
            android:indeterminateDuration="1500"
            android:id="@+id/player_progress_bar" />

        <ImageView
            android:id="@+id/player_previous"
            android:layout_width="@dimen/player_small_button_size"
            android:layout_height="@dimen/player_small_button_size"
            android:layout_marginLeft="@dimen/player_small_button_margin"
            android:layout_marginRight="@dimen/player_small_button_margin"
            android:scaleType="center"
            android:background="@drawable/bar_selector_white"
            android:src="@drawable/ic_action_previous" />

        <ImageView
            android:id="@+id/player_pause"
            android:layout_width="@dimen/player_small_button_size"
            android:layout_height="@dimen/player_small_button_size"
            android:layout_marginLeft="@dimen/player_small_button_margin"
            android:layout_marginRight="@dimen/player_small_button_margin"
            android:scaleType="center"
            android:background="@drawable/bar_selector_white"
            android:src="@drawable/ic_action_pause" />

        <ImageView
            android:id="@+id/player_play"
            android:layout_width="@dimen/player_small_button_size"
            android:layout_height="@dimen/player_small_button_size"
            android:layout_marginLeft="@dimen/player_small_button_margin"
            android:layout_marginRight="@dimen/player_small_button_margin"
            android:scaleType="center"
            android:background="@drawable/bar_selector_white"
            android:src="@drawable/ic_action_play"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/player_next"
            android:layout_width="@dimen/player_small_button_size"
            android:layout_height="@dimen/player_small_button_size"
            android:layout_marginLeft="@dimen/player_small_button_margin"
            android:layout_marginRight="@dimen/player_small_button_margin"
            android:scaleType="center"
            android:background="@drawable/bar_selector_white"
            android:src="@drawable/ic_action_next"/>

    </LinearLayout>

</RelativeLayout>