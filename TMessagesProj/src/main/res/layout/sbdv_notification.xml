<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/sbdv_notification_height"
        android:layout_marginHorizontal="@dimen/sbdv_notification_margin_horizontal"
        android:layout_marginTop="@dimen/sbdv_notification_margin_top"
        app:cardBackgroundColor="#1A1A1A"
        app:cardCornerRadius="@dimen/sbdv_notification_corner_radius"
        app:cardElevation="@dimen/sbdv_notification_card_elevation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ru.sberdevices.sbdv.view.AvatarView
                android:id="@+id/photoView"
                android:layout_width="@dimen/sbdv_notification_photo_size"
                android:layout_height="@dimen/sbdv_notification_photo_size"
                android:layout_marginStart="@dimen/sbdv_notification_photo_margin_start"
                app:cardCornerRadius="@dimen/sbdv_notification_photo_corner_radius"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sbdv_notification_name_margin_start"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/photoView"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/nameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="@dimen/sbdv_notification_name_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.5"
                    android:text="@string/sbdv_incoming_call"
                    android:textColor="#fff"
                    android:textSize="@dimen/sbdv_notification_name_text_size" />
            </LinearLayout>

            <Button
                android:id="@+id/vcAccept"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sbdv_notification_button_height"
                android:layout_marginEnd="@dimen/sbdv_notification_button_margin_end"
                android:background="@drawable/sbdv_accept_call_background"
                android:foreground="@drawable/sbdv_selector_focusable_button_24"
                android:gravity="center"
                android:minWidth="@dimen/sbdv_notification_button_min_width"
                android:text="@string/sbdv_accept"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/sbdv_notification_name_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/vcDecline"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/vcDecline"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sbdv_notification_button_height"
                android:layout_marginEnd="@dimen/sbdv_notification_button_decline_margin_end"
                android:background="@drawable/sbdv_decline_call_background"
                android:foreground="@drawable/sbdv_selector_focusable_button_24"
                android:gravity="center"
                android:minWidth="@dimen/sbdv_notification_button_min_width"
                android:text="@string/sbdv_decline"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/sbdv_notification_name_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/vcEndCall"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sbdv_notification_button_height"
                android:layout_marginEnd="@dimen/sbdv_notification_button_decline_margin_end"
                android:background="@drawable/sbdv_decline_call_background"
                android:foreground="@drawable/sbdv_selector_focusable_button_24"
                android:gravity="center"
                android:minWidth="@dimen/sbdv_notification_button_min_width"
                android:text="@string/sbdv_end_call"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/sbdv_notification_name_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/vcAccept"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
