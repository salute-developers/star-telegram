<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sbdv_rate_call_title_margin_top"
        android:text="@string/sbdv_rate_call_quality"
        android:textColor="@color/white"
        android:textSize="@dimen/sbdv_rate_call_title_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sbdv_rate_call_description_margin_top"
        android:text="@string/sbdv_choose_number"
        android:textColor="@color/sbdv_white_56"
        android:textSize="@dimen/sbdv_rate_call_description_title_text_size" />

    <org.telegram.ui.Components.BetterRatingView
        android:id="@+id/call_rating_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sbdv_rate_call_rating_margin_top" />

    <LinearLayout
        android:id="@+id/problems_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sbdv_rate_call_rating_margin_top"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible">

        <ToggleButton
            android:id="@+id/bad_sound_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sbdv_rate_call_bad_sound_margin"
            android:background="@drawable/sbdv_toggle_button_background"
            android:paddingHorizontal="@dimen/sbdv_rate_call_bad_sound_padding_horizontal"
            android:paddingVertical="@dimen/sbdv_rate_call_bad_sound_padding_vertical"
            android:textAllCaps="false"
            android:foreground="@drawable/sbdv_selector_focusable_button_24"
            android:textColor="@drawable/sbdv_toggle_text_selector"
            android:textOff="@string/sbdv_bad_sound"
            android:textOn="@string/sbdv_bad_sound"
            android:textSize="@dimen/sbdv_rate_call_bad_sound_text_size"
            tools:checked="true" />

        <ToggleButton
            android:id="@+id/bad_image_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sbdv_rate_call_bad_sound_margin"
            android:foreground="@drawable/sbdv_selector_focusable_button_24"
            android:background="@drawable/sbdv_toggle_button_background"
            android:paddingHorizontal="@dimen/sbdv_rate_call_bad_sound_padding_horizontal"
            android:paddingVertical="@dimen/sbdv_rate_call_bad_sound_padding_vertical"
            android:textAllCaps="false"
            android:textColor="@drawable/sbdv_toggle_text_selector"
            android:textOff="@string/sbdv_bad_image"
            android:textOn="@string/sbdv_bad_image"
            android:textSize="@dimen/sbdv_rate_call_bad_sound_text_size" />

        <Button
            android:id="@+id/other_problem_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sbdv_rate_call_bad_sound_margin"
            android:foreground="@drawable/sbdv_selector_focusable_button_24"
            android:background="@drawable/sbdv_toggle_button_selector"
            android:paddingHorizontal="@dimen/sbdv_rate_call_bad_sound_padding_horizontal"
            android:paddingVertical="@dimen/sbdv_rate_call_bad_sound_padding_vertical"
            android:text="@string/sbdv_other_problem"
            android:textAllCaps="false"
            android:textColor="@drawable/sbdv_toggle_text_selector"
            android:textSize="@dimen/sbdv_rate_call_bad_sound_text_size" />

    </LinearLayout>

    <Button
        android:id="@+id/rate_skip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sbdv_rate_call_button_margin_bottom"
        android:layout_marginTop="@dimen/sbdv_rate_call_button_margin_top"
        android:background="@drawable/sbdv_neutral_btn_r24_background"
        android:foreground="@drawable/sbdv_selector_focusable_button_24"
        android:paddingHorizontal="@dimen/sbdv_rate_call_button_padding_horizontal"
        android:text="@string/sbdv_skip"
        android:paddingVertical="@dimen/sbdv_rate_call_button_padding_vertical"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sbdv_rate_call_bad_sound_text_size" />

</LinearLayout>
