<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
				tools:ignore="RtlHardcoded"
				android:layout_width="match_parent"
				android:layout_height="@dimen/call_notification_height"
				android:background="@drawable/call_notification_bg">

	<ImageView
		android:id="@+id/photo"
		android:layout_width="@dimen/call_notification_photo_size"
		android:layout_height="@dimen/call_notification_photo_size"
		android:layout_marginTop="@dimen/call_notification_photo_margin"
		android:layout_marginRight="@dimen/call_notification_photo_margin"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:layerType="hardware"
		tools:src="#0f0"/>

	<ImageView
		android:id="@+id/icon"
		android:layout_width="@dimen/call_notification_icon_size"
		android:layout_height="@dimen/call_notification_icon_size"
		android:layout_alignBottom="@+id/photo"
		android:layout_alignLeft="@+id/photo"
		android:layout_marginLeft="@dimen/call_notification_icon_margin"
		android:layout_marginBottom="@dimen/call_notification_icon_margin"
		android:src="@drawable/call_custom_notification_icon"/>

	<LinearLayout
		android:id="@+id/text_wrap"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toLeftOf="@+id/photo"
		android:layout_alignTop="@+id/photo"
		android:layout_alignBottom="@+id/photo"
		android:layout_marginTop="@dimen/call_notification_text_wrap_vertical_margin"
		android:layout_marginBottom="@dimen/call_notification_text_wrap_vertical_margin"
		android:layout_marginLeft="@dimen/call_notification_text_wrap_left_margin"
		android:layout_marginRight="@dimen/call_notification_text_wrap_right_margin"
		android:gravity="center_vertical|right"
		android:orientation="vertical">

		<TextView
			android:id="@+id/name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="@dimen/call_notification_name_text_size"
			android:singleLine="true"
			android:ellipsize="end"
			android:textColor="#FFF"
			android:fontFamily="sans-serif-medium"
			android:gravity="right"
			tools:text="Wow Such Doge"/>

		<TextView
			android:id="@+id/title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="@dimen/call_notification_title_text_size"
			android:textColor="#FFF"
			android:singleLine="true"
			android:ellipsize="end"
			android:gravity="right"
			tools:text="Telegram Call"/>

		<TextView
			android:id="@+id/subtitle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="@dimen/call_notification_title_text_size"
			android:textColor="#6BFFFFFF"
			android:singleLine="true"
			android:ellipsize="end"
			android:gravity="right"
			tools:text="to Account Name"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/buttons"
		android:layout_width="match_parent"
		android:layout_height="@dimen/call_notification_buttons_height"
		android:paddingTop="@dimen/call_notification_buttons_top_padding"
		android:layout_alignParentBottom="true"
		android:background="@drawable/call_notification_line_rtl"
		android:orientation="horizontal">

		<FrameLayout
			android:id="@+id/answer_btn"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_margin="@dimen/call_notification_button_margin"
			android:background="@drawable/bar_selector_white"
			android:layout_weight="1">

			<TextView
				android:id="@+id/answer_text"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_gravity="center"
				android:textAllCaps="true"
				android:gravity="center"
				android:textSize="@dimen/call_notification_button_text_size"
				android:textColor="#5ee067"
				android:fontFamily="sans-serif-medium"
				android:drawablePadding="@dimen/call_notification_button_drawable_padding"
				tools:text="@string/VoipAnswerCall"
				app:drawableRightCompat="@drawable/ic_call_notification_answer" />

		</FrameLayout>

		<FrameLayout
			android:id="@+id/decline_btn"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_margin="@dimen/call_notification_button_margin"
			android:background="@drawable/bar_selector_white"
			android:layout_weight="1">

			<TextView
				android:id="@+id/decline_text"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_gravity="center"
				android:textAllCaps="true"
				android:gravity="center"
				android:textSize="@dimen/call_notification_button_text_size"
				android:textColor="#ef5050"
				android:fontFamily="sans-serif-medium"
				android:drawablePadding="@dimen/call_notification_button_drawable_padding"
				tools:text="@string/VoipDeclineCall"
				app:drawableRightCompat="@drawable/ic_call_notification_decline" />

		</FrameLayout>

	</LinearLayout>

