<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/searchHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/sbdv_search_padding_horizontal"
        android:paddingEnd="0dp"
        android:paddingTop="@dimen/sbdv_search_padding_vertical"
        android:paddingBottom="@dimen/sbdv_search_padding_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables">

        <ImageButton
            android:id="@+id/searchUpButton"
            android:layout_width="@dimen/sbdv_64dp"
            android:layout_height="@dimen/sbdv_64dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/sbdv_selector_focusable_button_24"
            android:importantForAccessibility="no"
            android:src="@drawable/sbdv_chevron_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sbdv_search_label_margin"
            android:layout_gravity="center_vertical"
            android:letterSpacing="-0.03"
            android:text="@string/sbdv_search"
            android:textColor="@color/white_alpha_96"
            android:textSize="@dimen/sbdv_search_label_text_size" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingStart="@dimen/sbdv_search_recycler_margin_start"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="1"
        tools:listitem="@layout/sbdv_contact" />

    <include
        android:id="@+id/searchEmptyContactsLayout"
        layout="@layout/sbdv_empty_contacts_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/searchHeader" />

</androidx.constraintlayout.widget.ConstraintLayout>
