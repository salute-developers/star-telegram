<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/card_width"
    android:layout_height="@dimen/card_recent_call_height"
    android:layout_marginEnd="@dimen/card_margin"
    android:background="@drawable/card_background"
    android:foreground="@drawable/sbdv_selector_focusable_card">

    <!-- Число на фоне в правом верхнем углу -->
    <TextView
        android:id="@+id/text_number"
        android:layout_width="@dimen/sbdv_recent_call_number_size"
        android:layout_height="@dimen/sbdv_recent_call_number_size"
        android:layout_marginTop="@dimen/sbdv_recent_call_number_margin_top"
        android:layout_marginEnd="@dimen/sbdv_recent_call_number_margin_end"
        android:background="@drawable/circle_gray"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textAppearance="@style/TextAppearance.Sbdv.Body1.Bold"
        android:textColor="@color/sbdv_white_56"
        android:textSize="@dimen/sbdv_recent_call_number_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="7" />

    <!-- лого в верхнем левом углу -->
    <ImageView
        android:id="@+id/logo_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sbdv_recent_call_logo_margin_start"
        android:layout_marginTop="@dimen/sbdv_recent_call_logo_margin_top"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_tg_plane"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- аватар с индикатором -->
    <include
        android:id="@+id/avatar"
        layout="@layout/card_avatar_with_status_img_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/sbdv_recent_call_avatar_margin_top"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Имя и фамилия с доп. инфор -->
    <include
        layout="@layout/card_name_with_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/sbdv_recent_call_card_margin_top"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>
